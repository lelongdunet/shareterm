SHARETERMCFG=$HOME/.shareterm
if [ ! -f $SHARETERMCFG ]; then
    echo "You must set copnfiguration in $SHARETERMCFG"
    exit 1;
fi

SSHPORT=''
source $SHARETERMCFG

if [ -z $SSHPORT ]; then
    SSH="ssh"
else
    SSH="ssh -p$SSHPORT"
fi

TARGET_USER=$1
echo "Connecting to $TARGET_USER's tarminal"
$SSH -t $NETUSER@$SHARESERV sudo -u shareterm /usr/share/shareterm/jointerm.priv $TARGET_USER

